# Development Dockerfile for MantraSetu API
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Configure npm to suppress warnings
RUN npm config set loglevel warn

# Install dependencies for native modules
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    postgresql-client

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --silent

# Copy source code
COPY . .

# Install any new dependencies that might have been added
RUN npm install --silent

# Ensure ts-node-dev is properly installed
RUN npm install ts-node-dev --save-dev --silent

# Generate Prisma client
RUN npx prisma generate

# Expose port
EXPOSE 3033

# Start development server
CMD ["npm", "run", "start:dev"]
